import argparse
import tempfile
import os
import json
 
 
parser = argparse.ArgumentParser() 
parser.add_argument('--key', help="dict key")
parser.add_argument('--value', help='dict value')
args = parser.parse_args()
 
# print(args.key, args,value)
 
dict1 = dict()
store_dict = dict()
storage_path = os.path.join(tempfile.gettempdir(), 'storagde.data')
if args.value is None:
    with open(storage_path, 'w+') as store:
        data = json.load(store)
        print(data[args.key])
else:
    if os.stat(storage_path).st_size == 0:
        with open(storage_path, 'w') as store:
            json.dump(dict1, store)
 
    else:
        with open(storage_path, 'r') as store:
            store_dict = json.load(store)
            dict1.update(store_dict)
 
        with open(storage_path, 'w') as store:
            json.dump(dict1, store)
